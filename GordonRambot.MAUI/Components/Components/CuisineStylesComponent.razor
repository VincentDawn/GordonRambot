<h3 style="text-align: center; font-weight: bold;">Cuisine Styles</h3>
@if (CuisineStyles.Any())
{
    <table class="table gr-tables">
        <thead>
            <tr>
                <th>Cuisine Style</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cuisineStyle in CuisineStyles)
            {
                <tr>
                    <td>@cuisineStyle</td>
                    <td>
                        <button class="btn btn-danger btn-sm" @onclick="() => RemoveCuisineStyle(cuisineStyle)">Remove</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No cuisine styles listed.</p>
}

<input type="text" @bind="newCuisineStyle" style="border-radius: 5px;" />
<button class="btn-settings" @onclick="AddCuisineStyle">Add Cuisine Style</button>

@code {
    [Parameter]
    public List<string> CuisineStyles { get; set; } = null!;

    private string newCuisineStyle = string.Empty;

    private void AddCuisineStyle()
    {
        if (!string.IsNullOrWhiteSpace(newCuisineStyle))
        {
            CuisineStyles.Add(newCuisineStyle);
            newCuisineStyle = string.Empty;
        }
    }

    private void RemoveCuisineStyle(string cuisineStyle)
    {
        CuisineStyles.Remove(cuisineStyle);
    }
}
